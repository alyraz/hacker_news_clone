<div class='container'>
<h2> User <%= @user.email %> </h2>
<section class='user-posts'>
  <h3> Posts </h3>
  <ul>
    <% @posts.each do |post| %> 
     <li> <a href='/posts/<%= post.id%>'> <%= post.title %> <a> </li>
    <% end %>
  </ul>
</section>
<section class='user-comments'>
  <h3> Comments </h3>
  <ul>
    <% @comments.each do |comment| %> 
     <li> <%= comment.body %> </li>
    <% end %>
  </ul> 
</section>
</div>
